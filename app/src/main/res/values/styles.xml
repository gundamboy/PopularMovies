<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@color/windowBackground</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="cardViewStyle">@style/CardView</item>
        <item name="coordinatorLayoutStyle">@style/Widget.Design.CoordinatorLayout</item>
        <item name="android:textColor">@color/textColorPrimary</item>
        <item name="android:textColorPrimary">@color/textColorPrimary</item>
        <item name="android:windowContentTransitions">true</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="TextStyles" parent="@style/AppTheme">
        <item name="android:textColor">@color/textContent</item>
    </style>

    <style name="fetchingMovies" parent="@style/TextStyles">
        <item name="android:textSize">@dimen/text14</item>
    </style>

    <style name="SplashScreen" parent="AppTheme.NoActionBar">
        <item name="android:windowBackground">@drawable/main_background</item>
    </style>

    <style name="NoNetwork" parent="@style/TextStyles">
        <item name="android:textSize">@dimen/text20</item>
    </style>

    <style name="DetailsTextTitle" parent="@style/TextStyles">
        <item name="android:textSize">@dimen/text16</item>
        <item name="android:textColor">@color/textTitles</item>
    </style>

    <style name="DetailsTextOverview" parent="@style/TextStyles">
        <item name="android:textSize">@dimen/text14</item>
    </style>

    <style name="DetailsTextMedium" parent="@style/TextStyles">
        <item name="android:textSize">@dimen/text12</item>
    </style>

    <style name="DetailsTextSmall" parent="@style/TextStyles">
        <item name="android:textSize">@dimen/text10</item>
    </style>

    <style name="DetailsTextTiny" parent="@style/TextStyles">
        <item name="android:textSize">@dimen/text08</item>
    </style>

    <style name="ExpandedToolbar" parent="@android:style/TextAppearance.DeviceDefault.Medium">
        <item name="android:textColor">@color/colorTransparent</item>
        <item name="android:textSize">@dimen/text20</item>
    </style>

    <style name="CollapsedToolbar" parent="@android:style/TextAppearance.DeviceDefault.Medium">
        <item name="android:textColor">@color/colorToolbarCollapsed</item>
        <item name="android:textSize">@dimen/text20</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
