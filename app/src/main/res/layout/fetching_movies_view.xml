<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:dots="http://schemas.android.com/apk/res-auto"
    android:id="@+id/fetching_movies"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:visibility="visible">

    <TextView
        android:id="@+id/getting_posters_text"
        style="@style/fetchingMovies"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margins_24"
        android:layout_marginEnd="@dimen/margins_16"
        android:layout_marginStart="@dimen/margins_16"
        android:gravity="center_horizontal"
        android:text="@string/getting_movies"
        app:layout_constraintBottom_toTopOf="@+id/imageView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margins_8"
        android:layout_marginEnd="@dimen/margins_8"
        android:layout_marginStart="@dimen/margins_8"
        android:layout_marginTop="@dimen/margins_8"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/film_reel" />

    <TextView
        android:id="@+id/movie_gods_text"
        style="@style/fetchingMovies"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/margins_text_match_dots"
        android:layout_marginStart="@dimen/margins_24"
        android:layout_marginTop="@dimen/margins_8"
        android:gravity="bottom"
        android:text="@string/contacting_gods"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <pl.tajchert.waitingdots.DotsTextView
        android:id="@+id/dots"
        style="@style/fetchingMovies"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margins_8"
        android:textSize="@dimen/text45"
        app:layout_constraintStart_toEndOf="@+id/movie_gods_text"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        dots:autoplay="true"
        dots:period="1000" />

</android.support.constraint.ConstraintLayout>