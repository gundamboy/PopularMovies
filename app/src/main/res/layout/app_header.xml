<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <View
        android:id="@+id/left_bar"
        android:layout_width="0dp"
        android:layout_height="@dimen/title_bar_height"
        android:layout_marginBottom="@dimen/margins_8"
        android:layout_marginEnd="@dimen/margins_24"
        android:layout_marginTop="@dimen/margins_8"
        android:background="@color/old_rose"
        app:layout_constraintBottom_toBottomOf="@+id/app_title"
        app:layout_constraintEnd_toStartOf="@+id/app_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/app_title" />

    <TextView
        android:id="@+id/app_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/osp_dim"
        android:text="@string/app_name"
        android:textAllCaps="true"
        android:textColor="@color/textColorPrimary"
        android:textSize="@dimen/title_screen_app_name_size"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/right_bar"
        android:layout_width="0dp"
        android:layout_height="@dimen/title_bar_height"
        android:layout_marginBottom="@dimen/margins_8"
        android:layout_marginStart="@dimen/margins_24"
        android:layout_marginTop="@dimen/margins_8"
        android:background="@color/old_rose"
        app:layout_constraintBottom_toBottomOf="@+id/app_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/app_title"
        app:layout_constraintTop_toTopOf="@+id/app_title" />

</android.support.constraint.ConstraintLayout>